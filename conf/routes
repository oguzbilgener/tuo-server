# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Version 1.0

#authentication
GET     /                           controllers.v1.Application.index()

GET     /v1                           controllers.v1.Application.index()
GET     /v1/                           controllers.v1.Application.index()

POST    /v1/auth/login                          controllers.v1.Auth.login()
POST    /v1/verify:public_key&:hash_body        controllers.v1.Auth.verify(String public_key, String hash_body)
# home

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
